@model List<ProductCatalogMVC.Models.Product>

<h2 class="mt-4">All Products</h2>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>
                    <img src="@product.ImageUrl" width="120" />

                   
                </td>
                <td>
                    <a class="btn btn-primary"
                       href="/Product/ShowById/@product.Id">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
